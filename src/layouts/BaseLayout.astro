---
interface Props{
  title?: string;
  description?: string;
  keywords?: string[];
}
import '../styles/global.css';

const {
  title = 'Lê Nguyễn Duy Khang – Blog cá nhân',
  description = 'Blog cá nhân chia sẻ về lập trình Java, JavaScript, và lập trình mạng máy tính.',
  keywords = ['lập trình Java','JavaScript','lập trình mạng','OOP','DOM','Fetch API','Spring Boot','Socket']
} = Astro.props as Props;

const fullTitle = title;
const kw = keywords.join(', ');

// Prefix cho tài nguyên tĩnh khi deploy dưới subpath (ví dụ /BlogCaNhan)
const basePath = Astro.site ? new URL(Astro.site).pathname.replace(/\/$/, '') + '/' : '/';
---
<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content="Astro" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={kw} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${basePath}images/avatar.svg`} />
    <meta property="og:locale" content="vi_VN" />

    <link rel="icon" href={`${basePath}images/js.svg`} />
    <link rel="canonical" href={Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.pathname} />
    <link rel="preload" as="image" href={`${basePath}images/avatar.svg`} />
  </head>
  <body>
    <slot />
  </body>
</html>
