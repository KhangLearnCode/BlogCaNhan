---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout title="Projects • Lê Nguyễn Duy Khang" description="Một vài dự án học tập và demo nhỏ.">
  <Nav />
  <main class="container section">
    <h1>Projects</h1>
    <div class="grid">
      <div class="card">
        <div class="meta">2025</div>
        <h3>Demo Socket Chat (Java + WebSocket)</h3>
        <p style="color:var(--muted)">Demo nhỏ thử nghiệm chat thời gian thực giữa Java server và khách hàng web.</p>
        <div class="tags"><span class="tag">Java</span><span class="tag">WebSocket</span><span class="tag">JS</span></div>
      </div>
      <div class="card">
        <div class="meta">2024</div>
        <h3>REST API Notes (Spring Boot)</h3>
        <p style="color:var(--muted)">API đơn giản quản lý ghi chú, minh hoạ các phương thức CRUD cơ bản.</p>
        <div class="tags"><span class="tag">Java</span><span class="tag">Spring Boot</span><span class="tag">REST</span></div>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>